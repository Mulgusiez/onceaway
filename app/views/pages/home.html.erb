<!-- Contact Section -->
<section id="contact">
    <div class="container">
      <div class="row">
          <div class="col-lg-12 text-center">
              <h2 class="section-heading">Contactez moi</h2>
              <h3 class="section-subheading text-muted">Votre premier pas vers le voyage</h3>
          </div>
      </div>
      <div class="row">
        <%= simple_form_for :new_request, url: send_request_pages_path, method: :post do |form| %>
          <div class="col-md-6">
            <%= form.input :name, label: false, placeholder: "Nom" %>
            <%= form.input :email, label: false, placeholder: "Email" %>
          </div>
          <div class="col-md-6">
            <%= form.input :phone_number, label: false, placeholder: "Télephone" %>
            <%= form.input :location, label: false, placeholder: "Lieu du voyage" %>
          </div>
          <div class="col-md-12">
          <%= form.input :description, as: :text, label: false, placeholder: 'Quel voyage desirez vous ?'%>
          </div>
          <div class="col-md-12 text-center">
          <%= form.submit 'Envoyer', class: 'btn btn-xl' %>
          </div>
        <% end %>
      </div>
    </div>
</section>
